<html>

<head>
    <title>A CRUDdy Store</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
</head>

<body ng-app="crudapp">
    <div class="header">
        <div class="container">
            <h1>Welcome to the Store!</h1>
            <h4>Here, we sell books, with no picture available, and you can donate your own book!</h4>
        </div>
    </div>
    <div class="row" ng-controller="MainController">
       <ui-view></ui-view>

        <form ng-submit="addBook()" style="margin-top:30px;">
            <h3>Donate a new Book</h3>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Title" ng-model="title"></input>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Author" ng-model="author"></input>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Description" ng-model="description"></input>
            </div>
            <div class="form-group">
                <input type="number" class="form-control" placeholder="Cost" ng-model="cost"></input>
            </div>
            <button type="submit" class="btn btn-primary">Donate</button>
        </form>

    </div>
    <script src="/javascripts/app.js"></script>
<!--    <script src="/javascripts/MainController.js"></script>
    <script src="/javascripts/RouteProvider.js"></script>
    <script src="/javascripts/Service.js"></script>
-->
</body>

</html>